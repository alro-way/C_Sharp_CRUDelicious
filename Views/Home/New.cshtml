@using C_Sharp_CRUDelicious.Models
@using System.ComponentModel.DataAnnotations;


@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <a href = "/">Home</a> 
    <h1 class="display-4">Add a new Dish!</h1>
    <p>-----------------------------------------------</p>
    @model Dish
    <form asp-action="Create" asp-controller="Home" method="post">
    <table>
        <tbody>
            <tr>
                <td><span class = "valid" asp-validation-for="Name"></span></td>
                <td><label asp-for="Name">Name of Dish:</label></td>
                <td><input asp-for="Name" type="text"></td>
            </tr>
            <tr>
                <td><span class = "valid" asp-validation-for="Chef"></span></td>
                <td><label asp-for="Chef">Chef's Name:</label></td>
                <td><input asp-for="Chef" type="text"></td>
            </tr>
            <tr>
                <td><span class = "valid" asp-validation-for="Tastiness"></span></td>
                <td><label asp-for="Tastiness">Tastiness:</label></td>
                <td>
                    <select asp-for="Tastiness">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>

                </td>
            </tr>
            <tr>
                <td><span class = "valid" asp-validation-for="Calories"></span></td>
                <td><label asp-for="Calories"># of Calories:</label></td>
                <td><input asp-for="Calories"></td>
            </tr>
            <tr>
                <td><span class = "valid" asp-validation-for="Description"></span></td>
                <td><label asp-for="Description">Description:</label></td>
                <td><input asp-for="Description" type="text"></td>
            </tr>
        </tbody>
    </table>
    <p><input value="Add Dish" type="submit"></p>
    </form>
    <p>-----------------------------------------------</p>

</div>
